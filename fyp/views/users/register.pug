extends ../layout

block content
    h1 Sign Up
    form(action="/register ",method="post")
        .form-group
            input#name(type="text",class="form-control" ,name="name",placeholder="name") 
        .form-group
            input#email(type="text",class="form-control" ,name="email",placeholder="email") 
        .form-group     
            input#password(type="text",class="form-control",name="password",placeholder="password")
        input(type="submit",class="btn btn-info", value="SIGN IN")
